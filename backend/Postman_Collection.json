{
  "info": {
    "name": "Alertautec Backend",
    "_postman_id": "a5bdc6ec-0000-4000-9000-ml-demo-123456",
    "description": "Colección para probar el backend de Alertautec con roles Student / Staff / Admin, incidentes, reportes y ML.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
