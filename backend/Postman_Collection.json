  "item": [
    {
      "name": "01 - Auth",
      "item": [
        {
          "name": "Register - Student",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"student001\",\n  \"password\": \"pass123\",\n  \"role\": \"student\"\n}"
            }
          }
        },
        {
          "name": "Register - Staff",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"staff001\",\n  \"password\": \"pass123\",\n  \"role\": \"staff\",\n  \"department\": \"MANTENIMIENTO\"\n}"
            }
          }
        },
        {
          "name": "Register - Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"admin001\",\n  \"password\": \"pass123\",\n  \"role\": \"admin\"\n}"
            }
          }
        },
        {
          "name": "Login - Student (Get Token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"student001\",\n  \"password\": \"pass123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let data = pm.response.json();",
                  "if (data.token) {",
                  "  pm.collectionVariables.set('token_student', data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login - Staff (Get Token)",
          "request": {
