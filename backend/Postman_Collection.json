      ]
    },
    {
      "name": "02 - Student",
      "item": [
        {
          "name": "Create Incident",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_student}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/student/incidents",
              "host": ["{{baseUrl}}"],
              "path": ["student", "incidents"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tipo\": \"MANTENIMIENTO\",\n  \"descripcion\": \"Fuga de agua en el baño del 2do piso\",\n  \"ubicacion\": {\n    \"edificio\": \"Edificio 1\",\n    \"piso\": 2,\n    \"aula\": \"B201\"\n  },\n  \"urgencia\": \"ALTA\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let data = pm.response.json();",
                  "if (data.incident && data.incident.incident_id) {",
                  "  pm.collectionVariables.set('incident_id', data.incident.incident_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List My Incidents",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{token_student}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/student/incidents/mine",
              "host": ["{{baseUrl}}"],
              "path": ["student", "incidents", "mine"]
            }
          }
        },
        {
          "name": "List All Incidents (public dashboard)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/student/incidents",
              "host": ["{{baseUrl}}"],
              "path": ["student", "incidents"]
            }
          }
        }
      ]
    },
    {
      "name": "03 - Staff/Admin - Incidents",
      "item": [
        {
          "name": "List Incidents For Department",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/by-department",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "by-department"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"departamento\": \"MANTENIMIENTO\"\n}"
            }
          }
        },
        {
          "name": "Assign Department (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_admin}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/{{incident_id}}/assign",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "{{incident_id}}", "assign"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"departamento\": \"MANTENIMIENTO\"\n}"
            }
          }
        },
        {
          "name": "Update Status (Staff/Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/{{incident_id}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "{{incident_id}}", "status"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nuevo_estado\": \"RESUELTO\"\n}"
            }
          }
        },
        {
          "name": "Add Comment (Staff)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/{{incident_id}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "{{incident_id}}", "comments"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comentario\": \"Estamos enviando personal de mantenimiento.\",\n  \"privado\": false\n}"
            }
          }
        },
        {
          "name": "Get Incident Events (Staff/Admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/{{incident_id}}/events?limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "{{incident_id}}", "events"],
              "query": [
                { "key": "limit", "value": "50" }
              ]
            }
          }
        }
      ]
    },
