{
  "info": {
    "name": "Alertautec - Staff & Admin",
    "_postman_id": "staff-admin-collection-0000-0000-0000-000000000000",
    "description": "Colección para probar el flujo de staff y admin en Alertautec (gestión de incidentes, notificaciones y ML).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "01 - Auth (Staff/Admin)",
      "item": [
        {
          "name": "Register - Staff",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"staff001\",\n  \"password\": \"pass123\",\n  \"role\": \"staff\",\n  \"department\": \"MANTENIMIENTO\"\n}"
            }
          }
        },
        {
          "name": "Register - Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"admin001\",\n  \"password\": \"pass123\",\n  \"role\": \"admin\"\n}"
            }
          }
        },
        {
          "name": "Login - Staff (Get Token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"staff001\",\n  \"password\": \"pass123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let data = pm.response.json();",
                  "if (data.token) {",
                  "  pm.collectionVariables.set('token_staff', data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login - Admin (Get Token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"admin001\",\n  \"password\": \"pass123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let data = pm.response.json();",
                  "if (data.token) {",
                  "  pm.collectionVariables.set('token_admin', data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "02 - Staff/Admin - Gestión de incidentes",
      "item": [
        {
          "name": "List Incidents For Department",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/by-department",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "by-department"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"departamento\": \"MANTENIMIENTO\"\n}"
            }
          }
        },
        {
          "name": "Assign Department (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_admin}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/{{incident_id}}/assign",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "{{incident_id}}", "assign"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"departamento\": \"MANTENIMIENTO\"\n}"
            }
          }
        },
        {
          "name": "Update Status (Staff/Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/{{incident_id}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "{{incident_id}}", "status"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nuevo_estado\": \"RESUELTO\"\n}"
            }
          }
        },
        {
          "name": "Add Comment (Staff)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/{{incident_id}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "{{incident_id}}", "comments"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comentario\": \"Estamos enviando personal de mantenimiento.\",\n  \"privado\": false\n}"
            }
          }
        },
        {
          "name": "Get Incident Events (Staff/Admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/{{incident_id}}/events?limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "{{incident_id}}", "events"],
              "query": [
                { "key": "limit", "value": "50" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "03 - ML & Notificaciones (Staff/Admin)",
      "item": [
        {
          "name": "Predict Risk (Staff/Admin -> SageMaker)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/predict-risk",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "predict-risk"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"edificio\": \"Edificio 1\",\n  \"piso\": 3,\n  \"urgencia\": \"ALTA\",\n  \"hora\": 14,\n  \"dia_semana\": 0\n}"
            }
          }
        },
        {
          "name": "Suggest Department (Staff/Admin -> SageMaker HuggingFace)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{token_staff}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/staff/incidents/{{incident_id}}/suggest-department",
              "host": ["{{baseUrl}}"],
              "path": ["staff", "incidents", "{{incident_id}}", "suggest-department"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "https://<tu-api-gateway-url>" },
    { "key": "token_staff", "value": "" },
    { "key": "token_admin", "value": "" },
    { "key": "incident_id", "value": "" }
  ]
}
